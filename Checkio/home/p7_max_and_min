# create a max() function
def Maximum(List, *args):
    # 做一个函数解决代码重用
    def m(x):   
        Max = 0
        for i in x:
            if i > Max:
                Max = i
        return Max
    
    if not args:
        return m(List)
    else:
        # then type(List) != List, it should be an number.
        List = [List]
        for i in args:
          List.append(i)
        return m(List)

a = [1,5,8,77,24,95]
print(Maximum(a))     >>> 95
print(Maximum(1,3,2)) >>> 3

